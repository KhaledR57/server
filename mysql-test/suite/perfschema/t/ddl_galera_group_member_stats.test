# Tests for PERFORMANCE_SCHEMA
# This test verifies the correct behaviour in case of invalid
# Usage of DDLs on the table galera_group_member_stats.

--source include/not_embedded.inc
--source include/have_wsrep.inc
--source include/have_perfschema.inc

--error ER_DBACCESS_DENIED_ERROR
ALTER TABLE performance_schema.galera_group_member_stats
  ADD COLUMN foo INTEGER;

--error ER_WRONG_PERFSCHEMA_USAGE
TRUNCATE TABLE performance_schema.galera_group_member_stats;

--error ER_DBACCESS_DENIED_ERROR
ALTER TABLE performance_schema.galera_group_member_stats
  ADD INDEX test_index(Member_Id);

--error ER_DBACCESS_DENIED_ERROR
CREATE UNIQUE INDEX test_index
  ON performance_schema.galera_group_member_stats(Member_Id);
