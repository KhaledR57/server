# This test verifies the correct behaviour in case of invalid
# usage of DMLs on the table galera_group_members.

--source include/not_embedded.inc
--source include/have_wsrep.inc
--source include/have_perfschema.inc

--disable_result_log
SELECT * FROM performance_schema.galera_group_members
  LIMIT 1;

SELECT * FROM performance_schema.galera_group_members
  WHERE wsrep_node_id='FOO';
--enable_result_log

--error ER_TABLEACCESS_DENIED_ERROR
INSERT INTO performance_schema.galera_group_members
  SET wsrep_node_id='FOO', member_id=1;

--error ER_TABLEACCESS_DENIED_ERROR
UPDATE performance_schema.galera_group_members
  SET member_id=12;

--error ER_TABLEACCESS_DENIED_ERROR
UPDATE performance_schema.galera_group_members
  SET member_id=12 WHERE wsrep_node_id LIKE "FOO";

--error ER_TABLEACCESS_DENIED_ERROR
DELETE FROM performance_schema.galera_group_members
  WHERE member_id=1;

--error ER_TABLEACCESS_DENIED_ERROR
DELETE FROM performance_schema.galera_group_members;

--error ER_TABLEACCESS_DENIED_ERROR
LOCK TABLES performance_schema.galera_group_members READ;
UNLOCK TABLES;

--error ER_TABLEACCESS_DENIED_ERROR
LOCK TABLES performance_schema.galera_group_members WRITE;
UNLOCK TABLES;
